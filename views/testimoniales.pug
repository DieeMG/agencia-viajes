extends ./layout/index 
block contenido
	main.container.mt-5 
		h1.text-center.mt-5 #{pagina}

		blockquote.text-center Lo que dicen nuestros clientes

		include ./layout/block-testimonios

		.row
			.col-md-12
				h2.d-block.w-100.text-center Agrega un testimonio

				if(errores)
					each error in errores 
						.alert.col.alert-danger.text-center= error.mensaje

		.row.justify-content-center 
			.col-md-8 
				form(action="" method="POST")
					.form-group 
						label(for="nombre") Nombre 
						input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control",  value= nombre)
					.form-group 
						label(for="email") Email 
						input#email(type="email", placeholder="Tu email", name="email", class="form-control", value= email)
					.form-group 
						label(for="mensaje") Mensaje 
						textarea#mensaje(rows= 3, placeholder="Tu mensaje", name="mensaje", class="form-control")= mensaje

					input.btn.btn-success.btn-block(type="submit")